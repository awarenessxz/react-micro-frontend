{
    "name": "react-component-library",
    "version": "1.0.0",
    "description": "React Library which contains a collection of custom reusable React Components, documented with storybook and tested using Jest &amp; React-Testing-Library",
    "main": "dist/index.js",
    "module": "dist/index.esm.js",
    "types": "dist/index.d.ts",
    "source": "src/index.ts",
    "files": [
        "dist"
    ],
    "scripts": {
        "test": "jest",
        "test:watch": "jest --watch",
        "build": "yarn run build:clean && rollup -c",
        "build:clean": "rm -rf dist",
        "storybook": "start-storybook -p 6006",
        "build-storybook": "build-storybook",
        "lint": "eslint .",
        "lint:format": "prettier --write ."
    },
    "engines": {
        "node": ">=10"
    },
    "keywords": [
        "react",
        "components",
        "custom",
        "library",
        "typescript",
        "storybook"
    ],
    "author": "awarenessxz",
    "license": "Apache-2.0",
    "devDependencies": {
        "@babel/core": "^7.12.3",
        "@rollup/plugin-commonjs": "^15.1.0",
        "@rollup/plugin-node-resolve": "^9.0.0",
        "@storybook/addon-actions": "^6.0.27",
        "@storybook/addon-essentials": "^6.0.27",
        "@storybook/addon-links": "^6.0.27",
        "@storybook/preset-scss": "^1.0.3",
        "@storybook/react": "^6.0.27",
        "@testing-library/jest-dom": "^5.11.4",
        "@testing-library/react": "^11.1.0",
        "@types/jest": "^26.0.15",
        "@types/react": "^16.9.53",
        "@typescript-eslint/eslint-plugin": "^4.5.0",
        "@typescript-eslint/parser": "^4.5.0",
        "babel-loader": "^8.1.0",
        "css-loader": "^5.0.0",
        "eslint": "^7.11.0",
        "eslint-config-airbnb-typescript": "^12.0.0",
        "eslint-config-prettier": "^6.14.0",
        "eslint-plugin-import": "^2.22.1",
        "eslint-plugin-jsx-a11y": "^6.3.1",
        "eslint-plugin-prettier": "^3.1.4",
        "eslint-plugin-react": "^7.21.5",
        "eslint-plugin-react-hooks": "^4.2.0",
        "identity-obj-proxy": "^3.0.0",
        "jest": "^26.6.0",
        "node-sass": "^4.14.1",
        "prettier": "^2.1.2",
        "react": "^17.0.0",
        "react-dom": "^17.0.0",
        "react-is": "^17.0.0",
        "rollup": "^2.32.0",
        "rollup-plugin-peer-deps-external": "^2.2.4",
        "rollup-plugin-postcss": "^3.1.8",
        "rollup-plugin-sass": "^1.2.2",
        "rollup-plugin-typescript2": "^0.28.0",
        "sass-loader": "^10.0.3",
        "style-loader": "^2.0.0",
        "ts-jest": "^26.4.1",
        "typescript": "^4.0.3",
        "typescript-plugin-css-modules": "^2.7.0"
    },
    "peerDependencies": {
        "react": ">=16.8.0",
        "react-dom": ">=16.8.0"
    }
}